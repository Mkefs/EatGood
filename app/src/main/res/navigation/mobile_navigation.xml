<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="dev.cotapro.mx.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/home_layout" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="dev.cotapro.mx.ui.feed.FeedFragment"
        android:label="@string/title_feed"
        tools:layout="@layout/feed_layout" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="dev.cotapro.mx.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/search_layout" />

</navigation>